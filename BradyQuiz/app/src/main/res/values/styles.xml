<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="question_style">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/archivo_black</item>
        <item name="android:padding">@dimen/question_padding</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="button_style" parent="question_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:backgroundTint">#93EC2B</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#090505</item>
    </style>

    <style name="move_btn_style">
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>